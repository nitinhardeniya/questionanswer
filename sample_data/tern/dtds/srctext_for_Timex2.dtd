<!ATTLIST	DOCTYPE	SOURCE	CDATA	#IMPLIED	>
<!ATTLIST	TIMEX2	val	CDATA	#IMPLIED	
			mod	CDATA	#IMPLIED	
			set	CDATA	#IMPLIED	
			non_specific	CDATA	#IMPLIED	
			anchor_val	CDATA	#IMPLIED	
			anchor_dir	CDATA	#IMPLIED	
			comment 	CDATA	#IMPLIED	>
]>

